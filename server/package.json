{
  "name": "clean-architecture-express",
  "version": "1.0.0",
  "description": "A Clean Architecture implementation with Express.js and MongoDB",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "tests": "npx jest",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix"
  },
  "keywords": [
    "clean-architecture",
    "express",
    "mongodb",
    "node"
  ],
  "author": "Federico Martinez",
  "license": "MIT",
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "morgan": "^1.10.0",
    "winston": "^3.17.0",
    "socket.io": "4.8.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "verbose": true
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "class-methods-use-this": "off",
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id"
          ]
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "log",
            "error"
          ]
        }
      ]
    }
  }
}
